@{
    ViewData["Title"] = "Serviços";
}

<h1>Serviços</h1>

<h4>Escolha do Serviço</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Cidades">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="font-weight-bold">Serviços</label>
                <fieldset data-role="controlgroup">
                    @foreach (var servico in @ViewBag.Servicos)
                    {
                        <input type="radio" name="servico" id="@servico" value="@servico" checked>
                        <label for="@servico">@servico</label>
                        <br />
                    }
                </fieldset>
            </div>
            <br />
            <div class="form-group" id="btnSend">
                <input type="submit" id="btn" value="Selecionar" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
