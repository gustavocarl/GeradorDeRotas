@model IEnumerable<Model.Rotas>

@{
    ViewData["Title"] = "Baixar Arquivos";
}

<h1>Baixar Arquivos</h1>
<hr />


@if (!ViewBag.Authenticate)
{
    <div class="row h5">
        <div class="col-md-12">
            <span>Para acessar essa página, é necessário estar logado no sistema.</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 p-0 m-1">
            <form method="post" asp-controller="Home" asp-action="Index">
                <input class="btn btn-link" type="submit" value="Entrar" />
            </form>
        </div>
    </div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeDoArquivo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeDoArquivo)
                    </td>
                    <td>
                        @Html.ActionLink("Downloads", "DownloadArquivo", new { nomeDoArquivo = item.NomeDoArquivo })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}