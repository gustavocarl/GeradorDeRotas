
@model Model.Equipe

@{
    ViewData["Title"] = "Remover Equipe";
}

<h1>Remover</h1>

<h3>Você realmente deseja remover essa equipe?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cidade.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd class="col-sm-10">
            <select style="width: 250px">
                @for (var i = 0; i < Model.Pessoa.Count; i++)
                {
                    <option value="@Model.Pessoa[i].NomeCompleto">@Model.Pessoa[i].NomeCompleto</option>
                }
            </select>
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger" />
    </form>
    <br />
    <br />
    <a asp-action="Index">Voltar para a listagem</a>
</div>