@model Model.Cidade

@{
	ViewData["Title"] = "Adicionar Cidade";
}

<h1>Adicionar Cidade</h1>

<h4>Cidade</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="UF" class="control-label"></label>
				<select asp-for="UF" class="control-label" disabled>
					<option value="SP">SP</option>
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Nome" class="control-label"></label>
				<select asp-for="Nome" id="state">
					@{
						foreach (var cidade in @ViewBag.Cidades)
						{
							<option value="@cidade.Nome">@cidade.Nome</option>
						}
					}
				</select>
				<span asp-validation-for="Nome" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Adicionar" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
